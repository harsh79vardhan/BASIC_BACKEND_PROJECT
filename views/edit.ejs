<body>
    <h1>EDIT FORM</h1>
    <form action="/products/<%=tup._id%>/edit?_method=PUT" method="post">
        <label for="name" name="name">NAME</label>
        <input type="text" name="name" id="name" value="<%=tup.name%>">
        <label for="price">PRICE</label>
        <input type="number" name="price" id="price" value="<%=tup.price%>">
        <label for="category">CATEGORY</label>
        <input type="text" name="category" id="category" value="<%=tup.category%>">
        <button>SUBMIT</button>
    </form>
</body>
